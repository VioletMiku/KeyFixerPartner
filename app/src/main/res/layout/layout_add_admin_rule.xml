<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/personal_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="50dp"
            android:paddingRight="50dp"
            android:paddingLeft="20dp"
            android:background="@drawable/corner_for_personal_page">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/personal_avatar_"
                android:src="@drawable/immacountto3"/>

            <TextView
                android:id="@+id/personal_name_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_avatar_"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/wallet_bright_foreground_holo_dark"
                android:textSize="25sp"
                android:layout_marginTop="10dp"
                android:text="Loli-sama"/>

            <TextView
                android:id="@+id/personal_email_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/personal_name_"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/wallet_bright_foreground_holo_dark"
                android:textSize="25sp"
                android:text="Lolicon_chan@gmail.com"/>
        </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/personal_information"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"
                android:paddingBottom="10dp"
                android:padding="10dp">

                <TextView
                    android:id="@+id/activated_account_list_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Danh sách tài khoản có thể thêm quyền"/>

                <ListView
                    android:id="@+id/activated_account_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:layout_below="@id/activated_account_list_title"
                    android:layout_marginTop="10dp"/>

                <ProgressBar
                    android:id="@+id/progressBar_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:outlineAmbientShadowColor="@color/colorAccent"
                    android:outlineSpotShadowColor="@color/colorAccent"
                    android:layout_marginTop="20dp"
                    android:layout_below="@id/not_activated_account_list_title"
                    android:visibility="visible"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>