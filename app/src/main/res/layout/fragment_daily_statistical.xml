<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DailyStatisticalFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp">

        <com.github.badoualy.datepicker.DatePickerTimeline
            android:id="@+id/datePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mti_primaryColor="@color/colorAccent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/datePicker"
            android:text="Thu nhập được"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/baseReleaseColor"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/txtTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$300"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:textAlignment="center"
            android:layout_below="@+id/title"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/txt_Day_totalRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đã hoàn tất 10 chuyến"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/baseReleaseColor"
            android:layout_below="@+id/txtTotal"
            android:layout_marginTop="20dp"/>
        <ListView
            android:id="@+id/lst_request_of_day"
            android:layout_below="@id/txt_Day_totalRequest"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</FrameLayout>