<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WhiteBackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">

        <RelativeLayout
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/baseReleaseColor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="T Ổ N G   D O A N H   T H U   C Ủ A   A P P"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/totalRevenue"
                android:layout_below="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/holo_green_dark"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                android:text="$10000"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:id="@+id/first_title"
                android:layout_below="@+id/totalRevenue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/baseReleaseColor">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/basePressColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="C Á   N H Â N"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/personal_card"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_title"
                android:layout_margin="20dp"
                android:paddingBottom="20dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/corner_and_shadow"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/admin_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:maxWidth="150dp"
                    android:maxHeight="150dp"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="3dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fixer_username"
                    android:layout_below="@id/admin_avatar"
                    android:layout_marginTop="20dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/baseReleaseColor"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/second_title"
                android:layout_below="@id/personal_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/baseReleaseColor">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/basePressColor"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="C Á C   T H À N H   V I Ê N"
                    android:layout_margin="10dp"/>
            </RelativeLayout>

            <EditText
                android:id="@+id/searchBar"
                android:layout_below="@id/second_title"
                android:layout_margin="5dp"
                android:hint="Nhập tên thợ sửa khóa cần tìm ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.keyfixer.partner.Helper.ExpandableHeightGridView
                android:id="@+id/grid"
                android:layout_below="@id/searchBar"
                android:layout_margin="10dp"
                android:numColumns="auto_fit"
                android:horizontalSpacing="2dp"
                android:isScrollContainer="false"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:layout_marginTop="20dp"
                android:layout_below="@id/searchBar"
                android:visibility="visible"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>